<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ticketSolder.model.dao.mysql.UserDao">
    <resultMap id="userInfoMap" type="UserInfo">
        <result column="userName" property="userName" />
        <result column="password" property="password" />
    </resultMap>

    <parameterMap id="UserInfo" type="UserInfo"/>

    <sql id="Base_Column_List">
        userName, password
    </sql>

    <select id="searchUser" parameterType="string" resultMap="userInfoMap">
        select
        <include refid="Base_Column_List" />
        from USER
        where userName = #{userName}
        and password = #{password}
    </select>

    <select id="searchUserByName" parameterType="string" resultMap="userInfoMap">
        select
        <include refid="Base_Column_List" />
        from USER
        where userName = #{userName}
    </select>
    
    <insert id="createUser" parameterType="string">
        insert into user (userName, password, email)
        values (#{userName}, #{password}, #{email})
    </insert>

</mapper>
